extends pug/template.pug 
block index
	section.sub-header
		nav
			a(href="../index.html")
				img(src="https://i.postimg.cc/ht6ykzHB/logo.png", alt="logo_img") 
			div.nav-links#navLinks
				i(class="fas fa-times")(onclick="hideMenu()")
					ul
						li 
							a(href="") Home 
						li 
							a(href="") About 
						li 
							a(href="") Course
						li 
							a(href="") Blog
						li 
							a(href="") Contact 
			i(class="fas fa-bars")(onclick="showMenu()")
		h1 Contact Us
	script(src="../JavaScript/menu.js")
	
	section.location
		iframe(src="https://www.google.com/maps/embed?pb=!1m22!1m12!1m3!1d63587.839736049034!2d-75.54225621663755!3d5.064808458878236!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m7!3e0!4m0!4m4!2s5.064665170067256%2C%20-75.50726087641429!3m2!1d5.064665199999999!2d-75.50726089999999!5e0!3m2!1ses!2sco!4v1633393366296!5m2!1ses!2sco" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy")
	section.contact-us
		div.row
			div.contact-col
				div
					i(class="fas fa-home")
					span 
						h5 XYZ Road, ABC Avennue
						p Calle 39 # 25 - 56
				div
					i(class="fas fa-phone-alt")
					span 
						h5 +57 310 437 8594
						p Monday to Friday  08:00 to 18:00 
				div
					i(class="fas fa-envelope")
					span 
						h5 leo@Apps.com
						p Email us your query
			div.contact-col
				form(action="form-handler.php" method="phost")
					input(type="text" name="name" placeholder="Enter your Name" required)
					input(type="email" name="email" placeholder="Enter Email Address" required)
					input(type="text" name="subject" placeholder="EnterYour Subject" required)
					textarea(rows="8" name="message" placeholder="Message" required) 
					button.hero-btn.red-btn(type="submit") Send Message
					  

	include pug/footer.pug 